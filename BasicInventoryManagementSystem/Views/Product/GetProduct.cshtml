@{
}
@model IEnumerable<BasicInventoryManagementSystem.Models.Product>

@{
    ViewData["Title"] = "GetProductCategories";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Include Bootstrap CSS for styling (optional) -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-5">
        <h1>Product List</h1>


        <!-- Form to add or update product categories -->
        <form id="categoryForm" method="POST" action="/ProductCatagory/CreateOrUpdate">
            <!-- Table to display product categories -->
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.StockQuantity</td>
                            <td>@item.Price</td>
                            <td>
                                <!-- Link to add a product -->
                                <a class="btn btn-warning" asp-action="CreateProduct" asp-controller="Product" asp-route-id="@item.ProductCategoryId">Add Product</a>

                                <!-- Link to edit the product category -->
                                <a class="btn btn-warning" asp-action="UpdateProduct" asp-controller="Product" asp-route-id="@item.ProductCategoryId" asp-route-pId="@item.Id">Edit</a>

                                <!-- Link to delete the product category -->
                                <a class="btn btn-warning" asp-action="DeleteProduct" asp-controller="Product" asp-route-id="@item.ProductCategoryId" asp-route-pId="@item.Id">Delete</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>

        <!-- Error message container (if needed for login form) -->
        <div id="errorMessage" class="text-danger" style="display: none;"></div>
    </div>

    <!-- jQuery script to handle login and redirection logic -->
    <script>
        $(document).ready(function () {
            // Redirect to the registration page when register button is clicked
            $('#addCatagoryBtn').click(function () {
                window.location.href = '/productcatagory/create'; // Adjust this URL to your registration action
            });
        });
    </script>

</body>
</html>
